<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/colorWhite">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:layout_marginEnd="15dp">

        <TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/groupNumberTextView"
                    android:fontFamily="@font/barlow_bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_text_height"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp" >

                    <TableRow>

                        <ImageView android:src="@drawable/baseline_person_black_18dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:paddingEnd="10dp"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/lecturerTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_medium"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text_height"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"/>

                    </TableRow>

                    <TableRow>

                        <ImageView android:src="@drawable/baseline_place_black_24dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            android:layout_gravity="center"
                            android:paddingEnd="10dp"/>

                        <TextView
                            android:id="@+id/placeTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_medium"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/normal_text_height"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"/>

                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/text_view_background"
                android:paddingVertical="5dp"
                android:paddingHorizontal="15dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/dayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/normal_text_height"
                    android:padding="3dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/hoursTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/normal_text_height"
                    android:padding="3dp"
                    android:layout_gravity="center" />

            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>