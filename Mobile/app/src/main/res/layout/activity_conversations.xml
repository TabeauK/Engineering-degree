<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/conversationLinearLayout"
    tools:context=".ConversationsActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:paddingBottom="10dp">

        <TableRow>

            <AutoCompleteTextView
                android:id="@+id/searchAutoComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:hint="@string/student_number_or_username"
                android:textSize="@dimen/normal_text_height"
                android:textColorHint="#aaa"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginEnd="10dp"
                android:minHeight="0dp"
                />

            <Button
                android:layout_width="70dp"
                android:background="@drawable/button_background"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text_height"
                android:textAllCaps="false"
                android:layout_marginHorizontal="10dp"
                android:text="@string/invite"
                android:minHeight="0dp"
                android:layout_height="@dimen/button_height"
                android:onClick="InviteToChat"/>

        </TableRow>

    </TableLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:dividerHeight="@dimen/normal_divider_height"
        android:id="@+id/conversationsListView"/>

</LinearLayout>