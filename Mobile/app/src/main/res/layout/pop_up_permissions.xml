<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingVertical="5dp"
    android:background="@drawable/pop_up_background"
    android:id="@+id/permissionPopUp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/permissionQuestionScrollableLinearLayout">

            <ImageView
                android:layout_width="@dimen/group_icon_size"
                android:layout_height="@dimen/group_icon_size"
                android:src="@drawable/outline_warning_amber_black_24dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/warningIcon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="20dp"
                android:fontFamily="@font/barlow_medium"
                android:textSize="24sp"
                android:textAlignment="center"
                android:textColor="@color/darkGray"
                android:id="@+id/permissionQuestion" />

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="0, 1"
                android:paddingVertical="10dp">

                <TableRow>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/red_button_background"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:fontFamily="@font/barlow_bold"
                        android:textSize="@dimen/normal_text_height"
                        android:text="@string/no"
                        android:layout_marginTop="10dp"
                        android:minHeight="0dp"
                        android:height="@dimen/button_height"
                        android:layout_marginHorizontal="40dp"
                        android:id="@+id/noButton"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/button_background"
                        android:textColor="@color/colorWhite"
                        android:textAllCaps="false"
                        android:fontFamily="@font/barlow_bold"
                        android:textSize="@dimen/normal_text_height"
                        android:text="@string/yes"
                        android:layout_marginTop="10dp"
                        android:minHeight="0dp"
                        android:height="@dimen/button_height"
                        android:layout_marginHorizontal="40dp"
                        android:id="@+id/yesButton" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
</LinearLayout>