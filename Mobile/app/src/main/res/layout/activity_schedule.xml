<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:id="@+id/scheduleActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0, 1"
        android:paddingVertical="10dp"
        android:id="@+id/chooseScheduleButtons">

        <TableRow>

            <Button
                android:background="@drawable/button_background"
                android:text="@string/usos_based"
                android:enabled="false"
                android:textSize="@dimen/normal_text_height"
                android:layout_width="100dp"
                android:layout_marginHorizontal="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/barlow_bold"
                android:minHeight="0dp"
                android:layout_height="@dimen/button_height"
                android:onClick="ChooseUSOSBasedSchedule"
                android:id="@+id/usosBasedButton"/>

            <Button
                android:background="@drawable/outlined_button_background"
                android:text="@string/exchanges_based"
                android:textSize="@dimen/normal_text_height"
                android:layout_width="100dp"
                android:layout_marginHorizontal="10dp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/barlow_bold"
                android:minHeight="0dp"
                android:layout_height="@dimen/button_height"
                android:onClick="ChooseExchangesBasedSchedule"
                android:id="@+id/exchangesBasedButton"/>

        </TableRow>

    </TableLayout>

    <include layout="@layout/schedule_tabs_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:id="@+id/scheduleTabsLayout"
        android:layout_below="@id/chooseScheduleButtons" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/scheduleTabsLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <include layout="@layout/hours_schedule_layout"
                android:id="@+id/hoursScheduleList"/>

            <View
                android:layout_width="@dimen/big_divider_height"
                android:layout_height="match_parent"
                android:background="#aaa" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scheduleFrameLayout">

                <include layout="@layout/schedule_horizontal_lines"/>

                <!-- tutaj maja byc zajecia -->
            </FrameLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>