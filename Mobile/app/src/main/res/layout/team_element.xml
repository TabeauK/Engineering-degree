<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/colored_element_background"
    android:padding="5dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/big_text_height"
                android:textStyle="bold"
                android:fontFamily="@font/barlow_medium"
                android:layout_column="0"
                android:id="@+id/team_subjectName"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_button"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:text="@string/leave"
                android:fontFamily="@font/barlow_bold"
                android:textColor="@color/colorWhite"
                android:textAllCaps="false"
                android:textSize="@dimen/medium_text_height"
                android:paddingHorizontal="10dp"
                android:layout_marginVertical="3dp"
                android:minHeight="0dp"
                android:height="@dimen/button_height"
                android:id="@+id/leaveTeamButton"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_element_content_background"
        android:orientation="vertical"
        android:paddingVertical="5dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:layout_marginHorizontal="10dp">

            <TableRow>

                <AutoCompleteTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:padding="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/barlow_regular"
                    android:hint="@string/student_number_or_username"
                    android:id="@+id/teamUserSearchAutoComplete"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/barlow_bold"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="@dimen/medium_text_height"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:minHeight="0dp"
                    android:height="@dimen/button_height"
                    android:text="@string/invite"
                    android:layout_column="1"
                    android:id="@+id/inviteToTeamButton"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_background"
            android:id="@+id/teamMembersTable"
            android:divider="@color/colorPrimary"
            android:dividerPadding="@dimen/big_divider_height"
            android:showDividers="middle"
            android:stretchColumns="0"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginHorizontal="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:layout_marginVertical="5dp"
            android:visibility="invisible"
            android:id="@+id/teamMembersAndInvitationsDivider"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_background"
            android:divider="@color/colorPrimary"
            android:dividerPadding="@dimen/big_divider_height"
            android:showDividers="middle"
            android:id="@+id/teamInvitationsTable"
            android:stretchColumns="0"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>