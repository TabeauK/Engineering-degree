<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/colored_element_background">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:paddingHorizontal="20dp">

            <TableRow>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_people_alt_white_24dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/groupIcon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/big_text_height"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/barlow_medium"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:id="@+id/subjectNameTextView"/>

            </TableRow>

        </TableLayout>

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_element_content_background" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingLeft="20dp"
                    android:textSize="@dimen/normal_text_height"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/barlow_medium"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/classesTypeAndNumberTextView"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="15dp"
        android:visibility="invisible"
        android:enabled="true"
        android:fontFamily="@font/barlow_bold"
        android:textColor="@color/colorWhite"
        android:text="@string/join"
        android:textSize="@dimen/big_text_height"
        android:textAllCaps="false"
        android:onClick="JoinToGroupRequest"
        android:minHeight="0dp"
        android:height="@dimen/button_height"
        android:id="@+id/joinGroupButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="15dp"
        android:visibility="invisible"
        android:enabled="false"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite"
        android:text="@string/stop_joining"
        android:maxWidth="130dp"
        android:fontFamily="@font/barlow_bold"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:onClick="StopJoiningToGroupRequest"
        android:minHeight="0dp"
        android:height="@dimen/button_height"
        android:id="@+id/stopJoiningGroupButton"/>

</RelativeLayout>