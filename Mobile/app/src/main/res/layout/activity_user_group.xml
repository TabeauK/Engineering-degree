<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/userGroupLinearLayout"
    android:padding="10dp">

    <include layout="@layout/group_header" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0, 1"
        android:layout_marginTop="8dp">

        <TableRow android:padding="3dp"
            android:background="@drawable/text_view_background"
            android:layout_marginVertical="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/barlow_medium"
                android:textSize="@dimen/normal_text_height"
                android:textColor="@color/colorBlack"
                android:text="@string/instructor"
                android:id="@+id/instructorLabel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/barlow_bold"
                android:textSize="@dimen/normal_text_height"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:id="@+id/instructorTextView"/>

        </TableRow>

        <TableRow android:padding="3dp"
            android:background="@drawable/text_view_background"
            android:layout_marginVertical="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textSize="@dimen/normal_text_height"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/colorBlack"
                android:text="@string/place"
                android:id="@+id/placeLabel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="@dimen/normal_text_height"
                android:fontFamily="@font/barlow_bold"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:id="@+id/placeTextView"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutInScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_layout_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingStart="10dp"
                android:paddingVertical="3dp"
                android:background="@drawable/text_view_background"
                android:textSize="@dimen/normal_text_height"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/colorBlack"
                android:text="@string/dates"
                android:id="@+id/datesTextView"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_marginBottom="3dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/datesTableLayout"
                    android:divider="@color/colorPrimary"
                    android:paddingHorizontal="5dp"
                    android:dividerPadding="@dimen/normal_divider_height"
                    android:showDividers="middle"
                    android:stretchColumns="0, 1, 2, 3, 4">

                    <TableRow>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/nr"
                            android:textSize="@dimen/normal_text_height"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/dayOfAWeek"
                            android:textSize="@dimen/normal_text_height"

                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/date"
                            android:textSize="@dimen/normal_text_height"

                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/start"
                            android:textSize="@dimen/normal_text_height"

                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_bold"
                            android:text="@string/end"
                            android:textSize="@dimen/normal_text_height"

                            android:textColor="@color/colorBlack" />

                    </TableRow>

                </TableLayout>
            </ScrollView>
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0, 1">

            <TableRow android:padding="3dp"
                android:background="@drawable/text_view_background"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/normal_text_height"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorBlack"
                    android:text="@string/students_limit"
                    android:id="@+id/studentsLimitLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="@dimen/normal_text_height"
                    android:fontFamily="@font/barlow_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/studentsLimitTextView"/>

            </TableRow>

            <TableRow android:padding="3dp"
                android:background="@drawable/text_view_background"
                android:layout_marginVertical="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textSize="@dimen/normal_text_height"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorBlack"
                    android:text="@string/students_number"
                    android:id="@+id/studentsNumberLabel"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textSize="@dimen/normal_text_height"
                    android:fontFamily="@font/barlow_bold"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/studentsNumberTextView"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/table_layout_background"
            android:orientation="vertical"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:paddingVertical="3dp"
                android:background="@drawable/text_view_background"
                android:textSize="@dimen/normal_text_height"
                android:fontFamily="@font/barlow_medium"
                android:textColor="@color/colorBlack"
                android:text="@string/participants"
                android:id="@+id/studentsListTextView"/>

            <!-- tutaj powinna być lista studentów -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_background"
                    android:stretchColumns="0, 1"
                    android:divider="@color/colorPrimary"
                    android:dividerPadding="@dimen/normal_divider_height"
                    android:showDividers="middle"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/participantsTableLayout"/>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>