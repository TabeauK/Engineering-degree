<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lecture_background"
    android:id="@+id/classElementFrameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:paddingHorizontal="10dp"
            android:paddingTop="3dp">

            <TableRow>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_height"
                    android:id="@+id/classElement_hoursTextView"/>

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/normal_text_height"
                    android:id="@+id/classElement_typeTextView"/>
            </TableRow>
        </TableLayout>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingBottom="3dp"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/normal_text_height"
            android:id="@+id/classElement_subjectTextView"/>

        <TextView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/class_white_content_background"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:fontFamily="@font/barlow_medium"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/normal_text_height"
            android:id="@+id/classElement_placeTextView"/>

    </LinearLayout>

</FrameLayout>